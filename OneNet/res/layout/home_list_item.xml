<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:descendantFocusability="blocksDescendants" 
     >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dip"
       >

        <ImageView
            android:id="@+id/iv_user_portrait_icon"
            android:layout_alignParentLeft="true"
           style="@style/small_portrait" 
           android:contentDescription="@string/app_name"
           />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/iv_user_portrait_icon"
            android:orientation="vertical"
            android:paddingLeft="5dip" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
               >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true" >

                    <TextView
                        android:id="@+id/tv_nick_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="娃娃三牛"
                        android:textColor="@android:color/secondary_text_light"
                        android:textSize="16dip"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true" >

                    <ImageView
                        android:id="@+id/iv_pic_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/picicon" 
                        android:visibility="gone"
                        />

                    <TextView
                        android:id="@+id/tv_content_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:paddingLeft="2dp"
                        android:text="2012-10-12"
                        android:textSize="10dip" />

                    <ImageView
                        android:id="@+id/iv_image_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="2dp"
                        android:src="@drawable/icon_1_n"
                        android:visibility="gone" />
                </LinearLayout>
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="dddddddddddddddddddddddddddddddddddddd"
                android:textColor="@android:color/secondary_text_light"
                android:autoLink="web|phone|email"
                android:textSize="12dip" />

            <ImageView
                android:id="@+id/iv_content_thumbnail_pic"
                android:layout_width="60dip"
                android:layout_height="60dip"
                android:layout_gravity="center_horizontal"
                android:scaleType="centerInside"
               	android:visibility="gone"
                android:src="@drawable/portrait"
                 />

            <LinearLayout
                android:id="@+id/lt_redirect_contain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@drawable/popup" 
                android:orientation="vertical"
                android:visibility="gone"
                >

                <TextView
                    android:id="@+id/tv_redirect_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="dddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddd"
                    android:textColor="@android:color/secondary_text_light"
                    android:autoLink="web|phone|email"
                    android:textSize="12dip" />
                
                <ImageView
                android:id="@+id/iv_recirect_thumbnail_pic"
                android:layout_width="60dip"
                android:layout_height="60dip"
                android:layout_gravity="center_horizontal"
                android:scaleType="centerInside"
                android:visibility="gone"
                android:src="@drawable/portrait"
                 />
                
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:paddingTop="2dp" >

                <TextView
                    android:id="@+id/tv_weibo_scource"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="来自牛微博"
                    android:textSize="12dip" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/iv_comment_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/comment_icon"
                         />

                    <TextView
                        android:id="@+id/tv_comment_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="12"
                        android:textSize="10dip" 
                        android:layout_marginLeft="5px"
                        android:layout_marginRight="10dp"
                        />

                    <ImageView
                        android:id="@+id/iv_redirect_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/redirect_icon" />

                    <TextView
                        android:id="@+id/tv_redirect_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="12"
                        android:textSize="10dip"
                        android:layout_marginLeft="5px" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="2.0px"
        android:background="@drawable/base_shape_line" />

</LinearLayout>